<div id="registerContainer">
  <h1><%= title %></h1>
  
  <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <ul class="notice errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (locals.message) { %>
    <p class="notice"><%= message %></p>
  <% } %>

  <form method="post" action="/account/register">
    <div>
      <label for="account_firstname">First Name:</label>
      <input type="text" id="account_firstname" name="account_firstname" 
             value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" required>
    </div>

    <div>
      <label for="account_lastname">Last Name:</label>
      <input type="text" id="account_lastname" name="account_lastname" 
             value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" required>
    </div>

    <div>
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" 
             value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>
    </div>

    <div>
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required>
      <p class="passwordHelp">Password must be at least 12 characters with 1 uppercase letter, 1 lowercase letter, 1 digit, and 1 special character (!@#$%^&*)</p>
    </div>

    <div>
      <label for="account_password_confirm">Confirm Password:</label>
      <input type="password" id="account_password_confirm" name="account_password_confirm" required>
    </div>

    <button type="submit">Register</button>
  </form>

  <p>Already have an account? <a href="/account/login">Login here</a></p>
</div>

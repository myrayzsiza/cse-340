<% layout('layouts/layout') %>

<h1>Account Management</h1>

<% if (message && message.length) { %>
  <div class="notice" style="color: green; border: 1px solid green; padding: 12px; margin-bottom: 20px; border-radius: 4px;">
    <%= message %>
  </div>
<% } %>

<h2>Welcome <%= accountData.account_firstname %></h2>

<div style="margin-top: 20px;">
  <h3>Account Options</h3>
  <ul style="list-style: none; padding: 0;">
    <li style="margin-bottom: 10px;">
      <a href="/account/update/<%= accountData.account_id %>" style="display: inline-block; background-color: #0066cc; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;">
        Update Account Information
      </a>
    </li>
  </ul>
</div>

<% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
  <div style="margin-top: 30px;">
    <h3>Inventory Management</h3>
    <p>Manage vehicle inventory and classifications</p>
    <a href="/inv/" style="display: inline-block; background-color: #0066cc; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px;">
      Go to Inventory Management
    </a>
  </div>
<% } %>

<div id="loginContainer">
  <h1><%= title %></h1>
  
  <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <ul class="notice errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (locals.message) { %>
    <p class="notice"><%= message %></p>
  <% } %>

  <form method="post" action="/account/login">
    <div>
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" 
             value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>
    </div>

    <div>
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required>
    </div>

    <button type="submit">Login</button>
  </form>

  <p>Don't have an account? <a href="/account/register">Register here</a></p>
  <p><a href="/account/forgot-password">Forgot your password?</a></p>
</div>

<%- nav %>

<div class="confirmation-container">
  <div class="confirmation-card">
    <div class="success-icon">âœ“</div>
    <h1>Order Confirmed!</h1>
    <p class="confirmation-message">Thank you for your order. Your vehicles will be processed shortly.</p>
    
    <% if (locals.messages && messages.message) { %>
      <div class="alert alert-success">
        <%= messages.message %>
      </div>
    <% } %>

    <div class="order-details">
      <h2>Order Details</h2>
      
      <div class="orders-grid">
        <% orders.forEach((order, index) => { %>
          <div class="order-card">
            <div class="order-header">
              <h3><%= order.inv_year %> <%= order.inv_make %> <%= order.inv_model %></h3>
              <span class="order-id">Order #<%= order.order_id %></span>
            </div>
            
            <div class="order-row">
              <span class="label">Price:</span>
              <span class="value"><%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(order.inv_price) %></span>
            </div>
            
            <div class="order-row">
              <span class="label">Status:</span>
              <span class="value status <%= order.order_status.toLowerCase() %>"><%= order.order_status %></span>
            </div>
            
            <div class="order-row">
              <span class="label">Order Date:</span>
              <span class="value"><%= new Date(order.order_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="shipping-info">
        <h3>Shipping Information</h3>
        <p>
          <%= orders[0].order_address %><br/>
          <%= orders[0].order_city %>, <%= orders[0].order_state %> <%= orders[0].order_zip %>
        </p>
        <p>Phone: <%= orders[0].order_phone %></p>
      </div>

      <div class="order-summary">
        <div class="summary-row">
          <span>Total Items:</span>
          <strong><%= orders.length %></strong>
        </div>
        <div class="summary-row total">
          <span>Total Amount:</span>
          <strong class="total-amount">
            <%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(totalPrice) %>
          </strong>
        </div>
      </div>
    </div>

    <div class="next-steps">
      <h2>What's Next?</h2>
      <ul>
        <li>You will receive a confirmation email shortly</li>
        <li>Your vehicles will be prepared for delivery within 3-5 business days</li>
        <li>You can track your orders in your account</li>
      </ul>
    </div>

    <div class="actions">
      <a href="/order/history" class="btn btn-primary">View All Orders</a>
      <a href="/inv" class="btn btn-secondary">Continue Shopping</a>
    </div>
  </div>
</div>


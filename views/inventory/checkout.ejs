<%- nav %>

<div class="checkout-container">
  <h1>Checkout</h1>
  
  <!-- Display errors if any -->
  <% if (locals.errors && errors.length > 0) { %>
    <div class="error-container">
      <h3>Please fix the following errors:</h3>
      <ul class="error-list">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <div class="checkout-content">
    <!-- Vehicle Summary -->
    <section class="vehicle-summary">
      <h2>Order Summary</h2>
      <div class="vehicle-summary-item">
        <h3><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
        <p><strong>Price:</strong> $<%= Number(vehicle.inv_price).toLocaleString("en-US") %></p>
      </div>
    </section>

    <!-- Account Information -->
    <section class="account-info">
      <h2>Account Details</h2>
      <div class="account-info-item">
        <p><strong>Name:</strong> <%= account.account_firstname %> <%= account.account_lastname %></p>
        <p><strong>Email:</strong> <%= account.account_email %></p>
      </div>
    </section>

    <!-- Checkout Form -->
    <section class="checkout-form">
      <h2>Delivery & Contact Information</h2>
      <form action="/order/process/<%= vehicle.inv_id %>" method="POST" class="form">
        
        <div class="form-group">
          <label for="phone">Phone Number:</label>
          <input 
            type="tel" 
            id="phone" 
            name="phone" 
            placeholder="(123) 456-7890"
            value="<%= locals.phone || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="address">Street Address:</label>
          <input 
            type="text" 
            id="address" 
            name="address" 
            placeholder="123 Main Street"
            value="<%= locals.address || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="city">City:</label>
          <input 
            type="text" 
            id="city" 
            name="city" 
            placeholder="Springfield"
            value="<%= locals.city || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="state">State:</label>
          <input 
            type="text" 
            id="state" 
            name="state" 
            placeholder="IL"
            maxlength="2"
            value="<%= locals.state || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="zip">Zip / Postal Code:</label>
          <input 
            type="text" 
            id="zip" 
            name="zip" 
            placeholder="62701"
            value="<%= locals.zip || '' %>"
            required
          />
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Confirm Order</button>
          <a href="/inv/detail/<%= vehicle.inv_id %>" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </section>
  </div>
</div>

<style>
  .checkout-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 1rem;
  }

  .checkout-container h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .error-container {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 5px;
    padding: 1rem;
    margin-bottom: 2rem;
    color: #721c24;
  }

  .error-container h3 {
    margin-top: 0;
  }

  .error-list {
    list-style-position: inside;
    margin: 0.5rem 0 0 0;
  }

  .error-list li {
    padding: 0.25rem 0;
  }

  .checkout-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .vehicle-summary,
  .account-info,
  .checkout-form {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1.5rem;
    background-color: #f9f9f9;
  }

  .vehicle-summary h2,
  .account-info h2,
  .checkout-form h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: #333;
  }

  .vehicle-summary-item,
  .account-info-item {
    background-color: white;
    padding: 1rem;
    border-radius: 5px;
  }

  .vehicle-summary-item h3 {
    margin: 0 0 0.5rem 0;
  }

  .vehicle-summary-item p,
  .account-info-item p {
    margin: 0.5rem 0;
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: 0.5rem;
    font-weight: bold;
    color: #333;
  }

  .form-group input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    justify-content: center;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #545b62;
  }

  @media (max-width: 600px) {
    .checkout-container {
      padding: 0.5rem;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }
  }
</style>
